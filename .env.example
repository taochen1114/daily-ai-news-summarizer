# API金鑰
OPENAI_API_KEY=your_openai_api_key
ELEVENLABS_API_KEY=your_elevenlabs_api_key
GOOGLE_APPLICATION_CREDENTIALS=path_to_your_google_credentials.json

# 儲存設定
STORAGE_TYPE=local  # 可選: local, cloudflare, supabase
CLOUDFLARE_R2_ENDPOINT=your_cloudflare_r2_endpoint
CLOUDFLARE_R2_ACCESS_KEY=your_cloudflare_r2_access_key
CLOUDFLARE_R2_SECRET_KEY=your_cloudflare_r2_secret_key
CLOUDFLARE_R2_BUCKET_NAME=your_cloudflare_r2_bucket_name
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key
SUPABASE_BUCKET=your_supabase_bucket

# 資料庫設定
DATABASE_URL=sqlite:///./app.db

# 後端 URL 設定
NEXT_PUBLIC_API_URL=your_render_url

# 應用程式設定
TTS_PROVIDER=elevenlabs  # 可選: elevenlabs, google
FETCH_INTERVAL=86400  # 抓取間隔（秒），預設24小時
MAX_ARTICLES_PER_SOURCE=10  # 每個來源每次抓取的最大文章數 
